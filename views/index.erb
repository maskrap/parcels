<h1>Package pricer!</h1>
<form action="/parcels">
  <div class="form-group">
     <label for="distance">How far you sending this ish?</label>
     <input id="distance" name="distance" class="form-control" type="number">
  </div>
  <div class="form-group">
    <label for="weight">Weight(kg):</label>
    <input id="weight" name="weight" class="form-control" type="number">
  </div>
  <div class="form-group">
     <label for="width">Width(cm):</label>
     <input id="width" name="width" class="form-control" type="number">
  </div>
  <div class="form-group">
     <label for="length">Length(cm):</label>
     <input id="length" name="length" class="form-control" type="number">
  </div>
  <div class="form-group">
     <label for="height">Height(cm):</label>
     <input id="height" name="height" class="form-control" type="number">
  </div>
  <div class="form-group">
    <label for="speed">delivery speed:</label>
    <select class="form-control" name="speed">
     <option value="1">Regular</option>
     <option value="2">Overnight</option>
    </select>
  </div>
  <div class="form-group">
    <label for="wrap">Wrap:</label>
    <select class="form-control" name="wrap">
     <option value="yes">Wrap this ish</option>
     <option value="no">No wrap</option>
    </select>
  </div>
  <button type="submit" class="btn-success">Send</button>
</form>
